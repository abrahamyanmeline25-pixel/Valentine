<body>

<h1 id="question">Will you be my Valentine? üíñ</h1>

<img id="character" class="character" src="waiting.gif">

<div class="buttons" id="buttons">
  <button id="yesBtn">Yes üíï</button>
  <button id="noBtn">No ü•∫</button>
</div>

<script>
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const question = document.getElementById("question");
const buttons = document.getElementById("buttons");
const character = document.getElementById("character");

/* No-’∂ ÷É’°’≠’π’∏÷Ç’¥ ’ß */
function moveNo() {
  noBtn.style.position = "fixed";

  const x = Math.random() * (window.innerWidth - 150);
  const y = Math.random() * (window.innerHeight - 80);

  noBtn.style.left = x + "px";
  noBtn.style.top = y + "px";

  let scale = yesBtn.style.transform
    ? parseFloat(yesBtn.style.transform.replace("scale(", "").replace(")", ""))
    : 1;

  scale += 0.1;
  yesBtn.style.transform = `scale(${scale})`;
}

noBtn.addEventListener("mouseenter", moveNo);
noBtn.addEventListener("mousemove", moveNo);

/* Yes ’Ω’•’≤’¥’•’¨’∏÷Ç÷Å ’∞’•’ø’∏ */
yesBtn.addEventListener("click", () => {
  question.innerHTML = "Yaaay!!! I love you!!! üíò";
  buttons.style.display = "none";

  character.src = "love.gif";
  character.style.transform = "scale(1.9)"; /* ’•÷Ä’Ø÷Ä’∏÷Ä’§ ’£’´÷Ü’® ’¥’•’Æ’°’∂’∏÷Ç’¥ ’ß */

  /* ’ç’Ø’¶’¢’∂’°’Ø’°’∂ ’¥’•’Æ ’∫’°’µ’©’µ’∏÷Ç’∂ */
  for (let i = 0; i < 150; i++) {
    createHeart();
  }

  /* ‘±’∂’®’∂’§’∞’°’ø ’∑’°’ø ’Ω÷Ä’ø’´’Ø’∂’•÷Ä */
  setInterval(() => {
    for (let i = 0; i < 15; i++) {
      createHeart();
    }
  }, 200);
});

/* ’ç÷Ä’ø’´’Ø’∂’•÷Ä’ù ’ø’°÷Ä’°’Æ’æ’∏÷Ç’¥ ’•’∂ ’°’¥’¢’∏’≤’ª ’ß’Ø÷Ä’°’∂’∏’æ */
function createHeart() {
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.innerHTML = "üíñ";

  const rect = character.getBoundingClientRect();
  const centerX = rect.left + rect.width / 2;
  const centerY = rect.top + rect.height / 2;

  heart.style.left = centerX + "px";
  heart.style.top = centerY + "px";

  const x = (Math.random() - 0.5) * window.innerWidth * 2;
  const y = (Math.random() - 0.5) * window.innerHeight * 2;

  heart.style.setProperty("--x", x + "px");
  heart.style.setProperty("--y", y + "px");

  heart.style.fontSize = (Math.random() * 25 + 15) + "px";

  document.body.appendChild(heart);

  setTimeout(() => {
    heart.remove();
  }, 4500);
}
</script>

</body>
