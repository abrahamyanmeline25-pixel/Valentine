  width: 220px;
  margin-bottom: 30px;
  z-index: 2;
  transition: transform 0.6s ease;
}

.buttons {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

button {
  width: 150px;
  height: 60px;
  font-size: 22px;
  border: none;
  border-radius: 15px;
  cursor: pointer;
  transition: 0.3s;
}

#yesBtn {
  background: #ff4d6d;
  color: white;
}

#noBtn {
  background: white;
}

/* ’ç÷Ä’ø’´’Ø’∂’•÷Ä */
.heart {
  position: fixed;
  font-size: 20px;
  animation: explode 4s ease-out forwards;
  pointer-events: none;
}

@keyframes explode {
  0% {
    transform: translate(0, 0) scale(0.2);
    opacity: 1;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: translate(var(--x), var(--y)) scale(2.5);
    opacity: 0;
  }
}
